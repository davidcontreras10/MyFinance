@model MyFinanceWebApp.Models.EditAppUserClientViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>User - Detail</title>
    <link rel="icon" href="~/Content/images/FinanceIcon.ico" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" />
    <link href="~/Content/Views/update-user-form.css" rel="stylesheet" />
    
    @Scripts.Render("~/Scripts/jquery-1.9.1.js")
    @Scripts.Render("~/Scripts/utils/utilities.js")

    @Scripts.Render("~/Scripts/moment.min.js")
    @Scripts.Render("~/Scripts/bootstrap.js")
    @Scripts.Render("~/Scripts/moment.min.js")
    @Scripts.Render("~/Scripts/bootstrap-multiselect.js")
    @Scripts.Render("~/Scripts/bootstrap-multiselect-collapsible-groups.js")

</head>
<body>

    <div>
        @{Html.RenderPartial("MainHeader", Model);}
    </div>

    @using (Html.BeginForm("UpdateUser", "User", new { userId = ViewData["userId"].ToString() }, FormMethod.Post))
    {
        <h1 style="text-align: center;">@ViewData["title"]</h1>

        <div>
            <div class="row form-row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4"></div>
                        <div class="col-md-4" form-field>
                            <div class="form-field-label">
                                @Html.LabelFor(m => m.BirthDate)
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-field">
                                <input type="date" id="@Html.IdFor(m => m.BirthDate)" name="@Html.NameFor(m => m.BirthDate)"
                                       value="@string.Format("{0:yyyy-MM-dd}", Model.BirthDate)" class="input-form-field" />
                                <br />@Html.ValidationMessageFor(m => m.BirthDate)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-field-label">
                                @Html.LabelFor(m => m.Username)
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-field">
                                @Html.TextBoxFor(m => m.Username, new { @class = "input-form-field" })
                                <br />@Html.ValidationMessageFor(m => m.Username)
                            </div>
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            <div class="form-field-label">
                                @Html.LabelFor(m => m.Name)
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-field">
                                @Html.TextBoxFor(m => m.Name, new { @class = "input-form-field" })
                                <br />@Html.ValidationMessageFor(m => m.Name)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-field-label">
                                @Html.LabelFor(m => m.PrimaryEmail)
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-field">
                                <input type="email" id="@Html.IdFor(m => m.PrimaryEmail)" value="@Html.ValueFor(m => m.PrimaryEmail)"
                                       name="@Html.NameFor(m => m.PrimaryEmail)" class="input-form-field" />
                                <br />@Html.ValidationMessageFor(m => m.PrimaryEmail)
                            </div>
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </div>
            </div>
        </div>

        <div style="text-align: center;">
            <input type="submit" value="Save" />
        </div>
    }
</body>
</html>